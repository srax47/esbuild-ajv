{
  "name": "esbuild-ajv",
  "version": "0.0.1",
  "description": "esbuild plugin to precompile json schema with ajv",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "fmt:check": "prettier --c './**/*.{ts,json,yml,yaml}'",
    "fmt": "prettier --write './**/*.{ts,json,yml,yaml}'",
    "test": "jest",
    "test:ci": "npm run lint && npm run test:coverage",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srax47/esbuild-ajv.git"
  },
  "keywords": [
    "ajv",
    "esbuild",
    "validation",
    "validator",
    "jsonschema"
  ],
  "bugs": {
    "url": "https://github.com/srax47/esbuild-ajv/issues"
  },
  "homepage": "https://github.com/srax47/esbuild-ajv",
  "author": "Rami Jarrar",
  "license": "MIT",
  "peerDependencies": {
    "ajv": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.9",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20"
  }
}
